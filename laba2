#include<iostream>
#include<cmath>
using namespace std;
int main()
{
//Начальное значение суммы и счётчика чисел
int a = 0;
//Цикл чисел от 0 до 99
for (int i = 0; i < 100; i++)
//Проверка числа на кратность 2
if ((i % 2) == 0)
//Если число кратно, то прибавляем число к предыдущему
a += i;
//Вывод суммы
cout << "summa=" << a << endl;
system("pause");
}
