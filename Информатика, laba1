// Задание 1
//Директивы препроцессора
#include <iostream>
#include <cmath>
//Главная функция
int main()
{
	//Промежуточные переменные для типа float
	float a = 1000;
	float b = 0.0001;
	float aa = pow(a, 2);
	float bb = pow(b, 2);
	//Вычисление выражений и вывод результатов для float
	float q = pow(a - b, 2);
	float w = aa - 2 * a * b;
	float e = q - w;
	float r = bb;
	float result = e / r;
	std::cout << result;
}
#include <iostream>
#include <cmath>
int main()
{
	//Промежуточные переменные для типа double
	double a = 1000;
	double b = 0.0001;
	double aa = pow(a, 2);
	double bb = pow(b, 2);
	//Вычисление выражений и вывод результатов для double
	double q = pow(a - b, 2);
	double w = aa - 2 * a * b;
	double e = q - w;
	double r = bb;
	double result = e / r;
	std::cout << result;
}
//Задание 2
#include <iostream>
#include <cmath>
using namespace std;
int main() {
	setlocale(LC_ALL, "Russian");
	//Ввод начальных значений m, n
	int a, b, c;
	cout << "Введите n";
	int n = 0;
	cin >> n;
	cout << "Вы ввели" << n << endl;
	cout << "Введите m";
	int m = 0;
	cin >> m;
	cout << "Вы ввели" << m << endl;
	//Вычисление значений вывод их на экран
	a = ++n;
	b = ++m;
	c = a * b;
	cout << "1)" << a << endl;
	cout << "2)" << b << endl;
	cout << "3)" << c << endl;
	a = n;
	b = ++m;
	c = b < a;
	cout << "4)" << a << endl;
	cout << "5)" << b << endl;
	cout << "6)" << c << endl;
	a = m;
	b = ++n;
	c = b > a;
	cout << "7)" << a << endl;
	cout << "8)" << b << endl;
	cout << "9)" << c << endl;
	system("pause");
}
