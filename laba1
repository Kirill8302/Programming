//Задание 1
//Директивы препроцессора
#include <iostream>
#include <cmath>
//Пространство имён std
using namespace std;
//Главная функция
int main()
{ 
//Промежуточные переменные для типа float
float a = 1000, b = 0.0001, c, d, e, g;
c = pow((a - b), 4);
d = pow(a, 2);
e = (2 * a * b);
g = pow(b, 2);
//Вычисление выражений и вывод результатов для float
float f = (c - (d - e)) / g;
cout << "float=" << f << endl;
//Вывод результата с 8 знаками после запятой для float
printf(" float = %.8f", f);
cout << "" << endl;
//Промежуточные переменные для типа double
double a1 = 1000, b1 = 0.0001, c1, d1, e1, g1;
c1 = pow((a1 - b1), 4);
d1 = pow(a1, 2);
e1 = (2 * a1 * b1);
g1 = pow(b1, 2);
//Вычисление выражений и вывод результатов для double
double f1 = (c1 - (d1 - e1)) / g1;
cout << "double=" << f1 << endl;
//Вывод результата с 8 знаками после запятой для double
printf(" double = %.8f", f1);
system("pause");
}
//Задание 2
#include <iostream>
#include <cmath>
using namespace std;
int main() {
//Ввод начальных значений m, n
int a,b,c;
cout << "enter n number";
int n = 0;
cin >> n;
cout << "you entered" << n << endl;
cout << "enter m number";
int m = 0;
cin >> m;
cout << "you entered" << m << endl;
//Вычисление значений вывод их на экран
a = ++n;
b = ++m;
c = a * b;
cout << "1)" << a << endl;
cout << "2)" << b << endl;
cout << "3)" << c << endl;
a = n;
b = ++m;
c = b < a;
cout << "4)" << a << endl;
cout << "5)" << b << endl;
cout << "6)" << c << endl;
a = m;
b = ++n;
c = b > a;
cout << "7)" << a << endl;
cout << "8)" << b << endl;
cout << "9)" << c << endl;
system("pause");
}
