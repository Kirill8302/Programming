#include <iostream>
#include <math.h>
using namespace std;
int main() {
	//Переменные, заданные вариантом
	double pi = 3.14, e = 0.0001;
	double a = pi / 5.0, b = 9.0 * pi / 5.0, sn, se, s, dx, y, x;
	int k = 10, n = 40;
	dx = ((b - a) / k);
	for (x = a; x <= b; x += dx) {
		//Обнуление значений сумм для заданного n, для заданной точности 
		sn = 0; se = 0; s = 0;
		// Циклом вычисляем сумму для заданного n
		for (int i = 1; i <= n; i++)
			sn += (cos(i * x) / i);
		int i = 1;
		// Циклом вычисляем сумму для заданной точности
		do {
			s = (cos(i * x) / i);
			se += s;
			i++;
		} while (fabs(se - s) < e);
		// Вычисление точного значения функции
		y = (-log(abs(2 * sin(x / 2))));
		//Вывод результатов
		cout << " x = " << x << "     " << " sn = " << sn << "     " << "  se = " << se << "     " << " y = " << y << endl;
	}
	return 0;
}
