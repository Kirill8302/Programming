#include <iostream>
#include <math.h>
using namespace std;
int main() {
	//Переменные, заданные вариантом
	double k = 10, pi = 3.14, e = 0.0001;
	double a = pi / 5, b = 9 * pi / 5;
	//Переменные для записи вычислений
	double X = a, SN = 0, SE = 0, Y = 0;
	//Формула n-ого члена ряда
	double n = 1, p = 1, an = cos(n * X) / n;
	//Шаг для X
	double step = (b - a) / k;
	//Цикл, изменяющий X в диапазоне измерения
	while (X <= b) {
		//Цикл, вычисляющий сумму ряда по заданной n
		while (n < 40) {
			//Член ряда n
			an = cos(n * X) / n;
			//Сумма ряда
			SN += an;
			//Увеличение номера члена
			n++;
		}
		n = 1;
		//Цикл вычисляющий сумму ряда с заданной точностью
		while (abs(p) > 0.0001) {
			//Член ряда n
			an = cos(n * X) / n;
			//Член ряда n+1
			double an2 = cos((n + 1) * X) / (n + 1);
			//Сумма членов ряда
			SE += an;
			//Разность соседних членов ряда
			p = an2 - an;
			//Увеличение номера члена
			n++;
		}
		//Функция f(x)
		Y = (-log(abs(2 * sin(X / 2))));
		// Вывод результатов
		cout << "X = " << X;
		cout << ", SN = " << SN;
		cout << ", SE = " << SE;
		cout << ", Y = " << Y << "; \n";
		//Увеличение X на заданный шаг
		X += step;
	}
	system("pause");
}
