#include <iostream>
#include <locale.h>
#include <stdlib.h>
#include <math.h>
#include <ctime>
using namespace std;
int main()
{
//Для корректного вывода кириллицы
setlocale(LC_ALL, "Russian");
//Функция, необходимая для того, чтобы при следующем запуске получить новый набор чисел
srand(time(NULL));
int t, k = 0;
//Ввод реального размера массива
cout << "Введите размер массива: ";
cin >> t;
int* m = new int[t];
for (int i = 0; i < t; i++)
{
//Одномерный массив целых чисел
m[i] = rand() % 10;
//Вывод полученного массива
cout << m[i] << "  ";
}
cout << endl;
//Удаление всех элементов равных 0
for (int i = 0; i < t; i++)
{
if (m[i] != 0)
{
m[k++] = m[i];
}
}
for (int i = 0; i < k; i++) {
cout << m[i] << "  ";
}
cout << endl;
//Добавление после первого четного элемента массива элемент со значением M[I-1]+2.
for (int i = 1; i < k; i++) {
if (m[i] % 2 == 0) {
for (int j = k; j != i; j--) {
m[j + 1] = m[j];
}
m[i + 1] = m[i - 1] + 2;
break;
}
}
for (int i = 0; i <= k; i++) {
cout << m[i] << "  ";
}
return 0;
}
